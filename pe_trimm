#!/bin/bash
IF=PATH TO INPUT FORWARD FILE (R1)
IR=PATH TO INPUT REVERSE FILE (R2)
OFP=PATH TO OUTPUT FORWARD PAIRED FILE
OFU=PATH TO OUTPUT FORWARD UNPAIRED FILE
ORP=PATH TO OUTPUT REVERSE PAIRED FILE
ORU=PATH TO OUTPUT REVERSE UNPAIRED FILE
java -jar /media/chemgen/Angiogenesis/EXOME_PIPE/Trimmomatic-0.36/trimmomatic-0.36.jar PE -phred33 $IF $IR $OFP $OFU $ORP $ORU ILLUMINACLIP:/media/chemgen/Angiogenesis/EXOME_PIPE/Trimmomatic-0.36/adapters/TruSeq3-PE.fa:2:30:10 LEADING:3 TRAILING:3 SLIDINGWINDOW:4:15 MINLEN:36
